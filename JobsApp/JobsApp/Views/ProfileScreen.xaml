<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsApp.Views.ProfileScreen"
             xmlns:local="clr-namespace:JobsApp.ViewModels"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="#f1faee"
             xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView">

    <!--in every icon on every page put three modes of the icons in order to make ux-->
    
    <ContentPage.BindingContext>
        <local:ProfileViewModel></local:ProfileViewModel>
    </ContentPage.BindingContext>

    
    
    <ContentPage.Content>
        
            <StackLayout>
                <!--<Grid>
               
                    <Grid.RowDefinitions>
                        
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                      
                    </Grid.RowDefinitions>  
                    
                    <Grid.ColumnDefinitions>

                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>-->

                <Image Source="backgroundImg" Margin="0,-80,0,0"/>
                <Button ImageSource="ProfileIcon.png" Margin="30,-50,300,10" HeightRequest="90" CornerRadius="50"/>



                 <Button  ImageSource="EditIcon.png"  BackgroundColor="Transparent" Command="{Binding EditCommand}" Margin="330,-45,10,0"/>

            <StackLayout Margin="150,-50,20,20" BackgroundColor="Transparent">


                <Label TextColor="Black" Text="Full Name"/>
                <!--{Binding FullName}"/>-->

                <Label TextColor="Black" Text="Age"/>
                <!--{Binding Age}"/>-->

                <Label Text="Connections"/>
                <!--{Binding Connections}"/>-->


                <Image Source="social.png" Margin="-10,-25,30,30"/>

                <Image Source="starsDemo.png" Margin="-80,-100,30,0"/>

            </StackLayout>
            <Image Source="divider.png" HorizontalOptions="CenterAndExpand"/>
            <pv:PancakeView CornerRadius="60">
                <!--Info-->
                <ScrollView>

                    <StackLayout Margin="30" BackgroundColor="#A8DADC" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"/>
                                <RowDefinition Height="auto"/>

                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Text="Professions" Grid.Column="0" Grid.Row="0"/>


                        </Grid>



                    </StackLayout>

                </ScrollView>
            </pv:PancakeView>

            <!--<Button Command="{Binding}"></Button>-->
               
            </StackLayout>
       
    </ContentPage.Content>
</ContentPage>