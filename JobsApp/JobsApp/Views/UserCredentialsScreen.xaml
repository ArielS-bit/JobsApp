<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsApp.Views.UserCredentialsScreen"
             xmlns:local="clr-namespace:JobsApp.ViewModels" BackgroundColor="#F1FAEE">

    <ContentPage.BindingContext>
        <local:BasicUserInfoViewModel></local:BasicUserInfoViewModel><!--Change to sign up vm-->
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <StackLayout>
            <!--Email, password and phone will be shown up the same way it was shown in the previous screen-->
            <!-- Pay attention to the user type in case it's an employee ask him what kind of jobs he would like to do,
            but in case it's an employer check if he's an employee as well and see what kind of jobs he would like to offer-->
            <Entry Placeholder="Email"/>
            <Label Text="Invalid Email!" IsVisible="{Binding EmailErrorShown}"/>

            <Entry Placeholder="Password"/>
            <Label Text="Invalid pass (Must be at least 8 letters)!" IsVisible="{Binding PassErrorShown}"/>

            <Entry Placeholder="Nickname"/>
            <Label Text="Invalid nickname (already exists)!" IsVisible="{Binding NicknameErrorShown}"/>

            <Button Text="Sign Up!" Command="{Binding }"/>


        </StackLayout>
    </ContentPage.Content>
</ContentPage>