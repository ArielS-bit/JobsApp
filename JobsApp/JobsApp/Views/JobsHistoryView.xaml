<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsApp.Views.JobsHistoryView"
             xmlns:local="clr-namespace:JobsApp.ViewModels">
  <ContentView.Content>
      <StackLayout>
          <Label Text="Jobs History!" HorizontalOptions="CenterAndExpand"/>
            <StackLayout x:Name="JobsHistoryView" BackgroundColor="Blue" Spacing="20" Padding="30" WidthRequest="250" BindableLayout.ItemsSource="{Binding JobOffer}" VerticalOptions="CenterAndExpand">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="local:">
                        <StackLayout Orientation="Horizontal">

                            <Label Text="{Binding Name}" HorizontalOptions="Start" VerticalOptions="Center" FontSize="15" TextColor="White"/>




                        </StackLayout>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </StackLayout>


        </StackLayout>
  </ContentView.Content>
</ContentView>