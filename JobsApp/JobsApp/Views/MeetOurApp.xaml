<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JobsApp.Views.MeetOurApp"
             xmlns:local="clr-namespace:JobsApp.ViewModels"
             NavigationPage.HasNavigationBar="False">

    
    <ContentPage.Content>
        <StackLayout>
            <!--Show functions that can be done in the app, show the vision in a carousel effect-->


            <Image Source="NormalScaleLogo.png" WidthRequest="90" HeightRequest="85"/>

            <Image Source="MeetOurAppImage1.png"/>
            
            <Frame>
                <Label Text="Nowdays, most of the teenagers want to start working. However, there are many businesses who deny to hire them. It creats a huge problem! We are here to change it!"/>
            </Frame>

          
            
            <Button x:Name="MainBtn" Text="Let'ss GoO!" BackgroundColor="#457B9D" Clicked="Button_Clicked"/>

            <StackLayout x:Name="Stck" HorizontalOptions="Center" Margin="50" Orientation="Horizontal">

                <Button x:Name="LogInBtn" Command="{Binding NavigateToLogInCommand}" Text="Log In"/>
                <Button x:Name="SignUpBtn" Command="{Binding NavigateToSignUpCommand}" Text="Join our community"/>
            
            </StackLayout>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>