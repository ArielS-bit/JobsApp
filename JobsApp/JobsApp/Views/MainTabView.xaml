                <!--<xct:TabView.TabItems>
                    --><!--<Button ImageSource="ProfileIcon.png" Margin="350,10,10,10" HeightRequest="50" CornerRadius="50"/>--><!--

                </xct:TabView.TabItems>-->
               
                
                <xct:TabViewItem
                    Icon="homeIcon.png" WidthRequest="100">
                    
                    <views:FeedView/>
                
                </xct:TabViewItem> 
                
                <xct:TabViewItem
                    Icon="HomeIcon.png">
                    
                    <views:SearchView/>
                
                </xct:TabViewItem>

                <xct:TabViewItem
                    Icon="HomeIcon.png">

                    <views:NotificationsView/>

                </xct:TabViewItem>

                <xct:TabViewItem
                    Icon="HomeIcon.png">

                    <views:JobsView/>

                </xct:TabViewItem>

             
            </xct:TabView>

        </Grid>

    </ContentPage.Content>
</ContentPage>